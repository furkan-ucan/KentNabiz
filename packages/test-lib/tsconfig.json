{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@kentnabiz/shared": ["../shared/src"],
      "@kentnabiz/ui": ["../ui/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [{ "path": "../shared" }, { "path": "../ui" }]
}
